@model MovieCatalog.ViewModels.MoviesViewModel
@{
    ViewData["Title"] = "Каталог фильмов";
}

<h1>@ViewData["Title"]</h1>
@foreach (Movie movie in Model.Movies)
{
    <div class="movie">
        <img src="@movie.CoverUrl" alt="@movie.Title" />
        <div class="movie-info">
            <div class="title">@movie.Title</div>
            <div class="year">@movie.PublishYear</div>
            <div class="producer">@movie.Producer</div>
            <div class="content">@movie.Content</div>
        </div>
    </div>
}